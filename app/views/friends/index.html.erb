<h3 class="text-center">Friends</h3>

<table class="table table-hover ">
  <thead class="table-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Instagram</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Unfriend</th>
      <th>User Id</th>
    </tr>
  </thead>
  <tbody id="friends">
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <%= render partial: "friend", locals: { friend: friend } %>
      <% end %>
    <%end%>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>

