<div class="container">
  <div class="card mx-auto" style="max-width: 500px;">
    <div class="card-body">
      <% if @meme %>
        <div class="mb-3 text-center">
          <img src="<%= @meme['url'] %>" class="card-img-top" alt="Meme image">
        </div>
        <div class="card-body">
          <p class="card-text"><%= @meme['description'] %></p>
        </div>
        <div class="text-center mt-3">
          <%= button_to 'Next Meme', new_meme_path, method: :get, remote: true, class: 'btn btn-primary' %>
        </div>
      <% else %>
        <div class="alert alert-warning text-center" role="alert">
          No meme available at the moment.
        </div>
      <% end %>
    </div>
  </div>
</div>
