<h2 class="text-center mb-4">Random Meme</h2>

<div class="container">
  <div class="card mx-auto" style="max-width: 500px;">
    <div class="card-body">
      <% if @meme %>
        <div class="mb-3">
          <img src="<%= @meme['url'] %>" class="card-img-top" alt="Meme image">
        </div>
        <div class="card-body">
          <p class="card-text"><%= @meme['description'] %></p>
        </div>
      <% else %>
        <p>No meme available at the moment.</p>
      <% end %>
    </div>
  </div>
</div>



